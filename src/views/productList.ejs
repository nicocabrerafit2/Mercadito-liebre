<!DOCTYPE html>
<html lang="en">
  <%- include ('./partials/head') %>

  <body>
    <%- include ('./partials/header') %>
    <main id="carnet">
      <br /><br /><br /><br />
      <h2>LISTADO DE PRODUCTOS</h2>

      <section class="mainUser">
        <% for(let i =0; i < product.length; i++) { %>
        <div id="carnetUsers">
          <div class="fotoProductoCaja">
            <%if(product[i].fotoProducto === 'default.png'){%>
            <img src="/images/imgP/default.png" alt="" />
            <%}else{%>
            <img src="/images/imgP/<%= product[i].fotoProducto %>" alt="" />
            <%}%>
          </div>
          <article class="articleUser">
            <p><b>ProductoID: </b> <%= product[i].productoID %></p>
            <p><b>Nombre: </b> <%= product[i].nombre %></p>
            <p><b>Descripcion: </b> <%= product[i].descripcion %></p>
            <p><b>Tipoproducto: </b> <%= product[i].tipoDeProductoID %></p>
            <p><b>Tamanoproducto: </b> <%= product[i].tamanoDeProductoID %></p>
            <p><b>Precio: </b> $ <%= product[i].precio %></p>

            <form
              action="/products/delete/<%= product[i].productoID %>"
              method="POST"
            >
              <button type="submit" class="LoginButton">Eliminar</button>
            </form>
            <form
              action="/products/edit/<%= product[i].productoID %>"
              method="GET"
            >
              <button type="submit" class="LoginButton">Editar</button>
            </form>
          </article>
        </div>
        <% } %>
      </section>
    </main>

    <%- include ('./partials/footer') %>
  </body>
</html>
